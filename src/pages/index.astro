---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import me_alien_pic from '../assets/me.jpg';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<link rel="alternate" type="application/rss+xml" 
  			title="RSS Feed for My Website" 
  			href="rss.xml" />
	</head>
	<body>
		<Header />
		<main>
			<h1 class="caution">Hi, I'm Mark</h1>
			<h2 class="title">I'm a Software Developer</h2>
			<p>This is my little space on the web to talk about software and other random things.</p>
			<Image src={me_alien_pic} alt="author" width="400" height="400" />

						<!-- Contact Section -->
						<section class="contact">
							<h3>Contact Me</h3>
							<p class="contact-links">
								<a href="https://www.linkedin.com/in/mark-outcalt-b3391529/" target="_blank">LinkedIn</a> | 
								<a href="https://docs.google.com/document/d/1-GrFtmUObAP2UkwQAUPnU6cUUIL7FkbGaS7ek33NQYo/edit?tab=t.0" target="_blank">Resume</a>
							</p>
						</section>
		</main>
		<Footer />
	</body>
</html>

<style>
.caution {
	color: var(--color-theme-1);
}
.title {
	color: var(--color-theme-2);
}
main {
	text-align: center;
}

.contact {
  margin: 2rem auto;
  width: 350px;
  padding: 2rem 1rem;
  position: relative;
  text-align: center;
  color: #fff;
  /* Animated gradient background */
  background: linear-gradient(135deg, var(--color-theme-2), #333, var(--color-theme-2), #333);
  background-size: 300% 300%;
  animation: gradientAnimation 20s ease infinite;
  clip-path: polygon(
  20% 0%,    /* Top-left */
  80% 0%,    /* Top-right */
  100% 20%,  /* Right-top */
  100% 80%,  /* Right-bottom */
  80% 100%,  /* Bottom-right */
  50% 100%,  /* Bottom-center */
  20% 100%,  /* Bottom-left */
  0% 80%,    /* Left-bottom */
  0% 20%,    /* Left-top */
  20% 0%     /* Top-left */
);
  box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
  transition: transform 0.4s ease;
  z-index: 0;
}

@keyframes gradientAnimation {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.contact:hover {
  transform: translateY(-5px);
}

.contact a {
  color: var(--color-theme-1);
  text-decoration: none;
  margin: 0 0.5rem;
}

.contact a:hover {
  text-decoration: underline;
}

.contact-links {
  font-family: 'Jost';
}



