<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
            .post-header {
                margin-bottom: 2rem;
            }
			main {
				width: 900px;
			}
			ul {
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				/* color: rgb(var(--black)); */
				line-height: 2;
			}
			.date {
				margin: 1rem;
				color: rgb(var(--gray));
			}
			ul li a:hover {
				color: var(--color-theme-1);
			}

			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				.post-header {
					text-align: center;
			}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h3 class="post-header">Blog Archive</h3>
                <div class="tag-group">
                    <ul class="post-list">
                      {allPosts && [...allPosts.entries()].map(([tag, posts]) => (
                        <li>
                          <h4 id={tag}>{`#${tag}`}</h4>
                          <ul>
                            {posts.map(post => (
                              <li>
                                <a href={`/blog/${post.id}`}>
                                    <p>{post.data.title}</p>
                                </a>
                              </li>
                            ))}
                          </ul>
                        </li>
                      ))}
                    </ul>
                  </div>
			</section>
		</main>
		<Footer />
		<script>
			// TODO understand this better
			document.addEventListener('hashchange', () => {
			  const tag = window.location.hash.substring(1);
			  const targetElement = document.getElementById(tag);
			  if (targetElement) {
				targetElement.scrollIntoView({ behavior: 'smooth' });
			  }
			});
		  
			// Check for hash fragment on load
			const initialHash = window.location.hash.substring(1);
			const initialElement = document.getElementById(initialHash);
			if (initialElement) {
			  initialElement.scrollIntoView({ behavior: 'smooth' });
			}
		  </script>
	</body>
</html>