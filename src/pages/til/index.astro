---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const pageTitle = "TIL - Today I Learned";
const pageDescription = "A collection of articles, books, and talks I'm learning from.";

const categories = [
    {
        title: "Articles",
        href: "/til/articles",
        icon: "ðŸ“°",
        color: "#3e7cb1"
    },
    // Books category hidden - keeping code for future use
    // {
    //     title: "Books",
    //     description: "Books that have shaped my thinking and skills",
    //     href: "/til/books",
    //     icon: "ðŸ“š",
    //     color: "#8B4513"
    // },
    {
        title: "Talks",
        href: "/til/talks",
        icon: "ðŸŽ¬",
        color: "#e63946"
    }
